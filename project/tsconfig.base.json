{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@project/account-config": [
        "libs/shared/account/account-config/src/index.ts"
      ],
      "@project/authentication": [
        "libs/shared/account/authentication/src/index.ts"
      ],
      "@project/blog-comment": ["libs/shared/post/blog-comment/src/index.ts"],
      "@project/blog-post": ["libs/shared/post/blog-post/src/index.ts"],
      "@project/blog-user": ["libs/shared/account/blog-user/src/index.ts"],
      "@project/core": ["libs/shared/core/src/index.ts"],
      "@project/data-access": ["libs/shared/data-access/src/index.ts"],
      "@project/helpers": ["libs/shared/helpers/src/index.ts"],
      "@project/models": ["libs/blog/models/src/index.ts"],
      "@project/pipes": ["libs/shared/pipes/src/index.ts"],
      "@project/post": ["libs/shared/post/src/index.ts"],
      "@project/shareable": ["shareable/common-const.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
